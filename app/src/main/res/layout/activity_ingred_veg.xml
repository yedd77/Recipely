                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/vegItemChili"
                    android:background="@drawable/ingredient_itembg"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chili"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/vegItemCarrot"
                    android:background="@drawable/ingredient_itembg"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carrot"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vegItemBeetroot"
                    android:background="@drawable/ingredient_itembg"
                    android:elevation="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beetroot"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/vegItemRadish"
                    android:background="@drawable/ingredient_itembg"
                    android:elevation="3dp"
